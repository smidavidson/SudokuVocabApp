<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainMenuScreen">

    <LinearLayout
        android:id="@+id/main_menu_buttonpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/new_game_button"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/menu_new_game_btn" />

        <Button
            android:id="@+id/load_game_button"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/menu_load_game_btn" />

        <Button
            android:id="@+id/change_language_button"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/menu_exit_btn" />



    </LinearLayout>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/main_menu_buttonpad"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="30dp" />

        <Button
            android:id="@+id/custom_words_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_custom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/main_menu_buttonpad"
            />

</androidx.constraintlayout.widget.ConstraintLayout>